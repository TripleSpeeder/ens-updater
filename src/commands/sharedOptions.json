{
  "verbose": {
    "description": "Verbose output",
    "alias": "v",
    "type": "boolean",
    "default": false,
    "demandOption": false
  },
  "web3": {
    "description": "Web3 connection string",
    "type": "string",
    "demandOption": true
  },
  "estimateGas": {
    "description": "Estimate required gas for transactions",
    "type": "boolean",
    "default": false,
    "demandOption": false
  },
  "gasPrice": {
    "description": "Gas price to set for transaction (unit 'gwei'). Defaults to 10.",
    "type": "number",
    "default": 10,
    "demandOption": false
  },
  "gas": {
    "description": "Gas to provide for transaction (omit to use automatic calculation)",
    "type": "number",
    "demandOption": false
  },
  "dry-run": {
    "description": "Do not perform any real transactions",
    "type": "boolean",
    "default": false,
    "demandOption": false
  },
  "accountindex": {
    "alias": "i",
    "description": "Account index. Defaults to 0",
    "default": 0,
    "type": "number"
  },
  "registryAddress": {
    "description": "Optional contract address of the ENS Registry.",
    "type": "string",
    "demandOption": false
  }
}